[Unit]
Description=Driver Bot Telegram
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/clever-driver-bot
Environment=PATH=/root/clever-driver-bot/venv/bin
ExecStart=/root/clever-driver-bot/venv/bin/python /root/clever-driver-bot/bot/main.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target 